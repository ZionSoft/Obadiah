<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/book_selection_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ListView
                android:id="@+id/book_list_view"
                android:layout_width="@dimen/book_list_view_width"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dip"
                android:listSelector="@null"
                android:numColumns="auto_fit"/>

        <GridView
                android:id="@+id/chapter_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="@dimen/chapter_grid_view_column_width"
                android:gravity="center"
                android:listSelector="@null"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"/>

    </LinearLayout>

    <ProgressBar
            android:id="@+id/book_selection_loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
</FrameLayout>
