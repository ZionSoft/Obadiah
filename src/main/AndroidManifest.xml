<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.zionsoft.obadiah"
          android:versionCode="010800"
          android:versionName="1.8.0">

    <uses-sdk
            android:minSdkVersion="7"
            android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
                android:name="com.google.ads.AdActivity"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        <activity
                android:name=".BookSelectionActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity"/>
        <activity android:name=".ShortcutActivity">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/activity_settings"/>
        <activity android:name=".TextActivity"/>
        <activity
                android:name=".TranslationDownloadActivity"
                android:label="@string/activity_download_translation"/>
        <activity
                android:name=".TranslationSelectionActivity"
                android:label="@string/activity_select_translation"/>

        <service android:name=".bible.TranslationDownloadService"/>
        <service android:name=".bible.TranslationListDownloadService"/>
        <service android:name=".bible.TranslationRemoveService"/>
        <service android:name=".support.UpgradeService"/>
    </application>

</manifest>
