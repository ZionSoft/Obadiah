<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:obadiah="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.zionsoft.obadiah.ui.widget.settings.SettingSectionHeader
        android:id="@+id/display_section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        obadiah:settingSectionHeaderText="@string/pref_display" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/screen_on_switch"
        android:background="@drawable/background_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:text="@string/pref_screen_on" />

    <View
        style="@style/Divider.Horizontal"
        android:background="@android:color/darker_gray" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/night_mode_switch"
        android:background="@drawable/background_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:text="@string/pref_night_mode" />

    <View
        style="@style/Divider.Horizontal"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/text_size_section"
        android:background="@drawable/background_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_size_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/pref_text_size" />

        <TextView
            android:id="@+id/text_size_value_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textColor="@color/dark_gray" />
    </LinearLayout>

    <net.zionsoft.obadiah.ui.widget.settings.SettingSectionHeader
        android:id="@+id/about_section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        obadiah:settingSectionHeaderText="@string/pref_about" />

    <TextView
        android:id="@+id/rate_me_text_view"
        android:background="@drawable/background_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/paddingLeft"
        android:gravity="center_vertical"
        android:text="@string/pref_rate_me" />

    <View
        style="@style/Divider.Horizontal"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:background="@drawable/background_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/paddingLeft"
        android:paddingRight="@dimen/paddingRight"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/pref_version" />

        <TextView
            android:id="@+id/version_value_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:textColor="@color/dark_gray" />
    </LinearLayout>

</LinearLayout>
