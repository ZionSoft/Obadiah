<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="actionModeBackground">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/gold</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:colorForeground">@color/dark_gray</item>
        <item name="android:dropDownListViewStyle">@style/AppSpinnerStyle</item>
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarThumbVertical">@color/dark_gray</item>
        <item name="android:windowAnimationStyle">@style/AppWindowAnimationStyle</item>
    </style>

    <style name="AppSpinnerStyle" parent="style/ThemeOverlay.AppCompat.Light">
        <item name="android:divider">@color/dark_gray</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="AppWindowAnimationStyle">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left_to_right</item>
    </style>

    <style name="Divider" />

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_bar_text_size</item>
    </style>
</resources>
