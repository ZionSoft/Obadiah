<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#6486cb"
        android:orientation="horizontal" >

        <include
            android:id="@+id/textTranslationSelection"
            android:layout_alignParentLeft="true"
            layout="@layout/titlebar_button" />
    </RelativeLayout>

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bookListView"
        android:layout_width="144dip"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleBar"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dip"
        android:listSelector="@null"
        android:numColumns="auto_fit" />

    <GridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chapterGridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleBar"
        android:layout_toRightOf="@id/bookListView"
        android:cacheColorHint="@android:color/transparent"
        android:columnWidth="48dip"
        android:gravity="center"
        android:listSelector="@null"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" />

</RelativeLayout>
